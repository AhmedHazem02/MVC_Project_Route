<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @*Start Header*@
    <nav class="mt-5">
        <center>
            <a class="btn btn-primary" href="/Home/Index">Home </a>
            <a class="btn btn-secondary" href="/Home/AboutUs">About Us </a>
            <a class="btn btn-success" href="/Home/ConnectUs">Connect Us </a>
            <a class="btn btn-danger" href="/Home/Privacy">Privacy </a>

            <a class="btn btn-warning" href="/Account/Login">Login </a>
            <a class="btn btn-info" href="/Account/SignUp">Sign Up</a>

        </center>
    </nav>
    @*End Header*@

    <div>
        @RenderBody()
    </div>

    @*Start Footer*@
    <footer>
        <center>
            <div>
                <p>CopyRight &copy; A.Hazem @DateTime.Now.Year</p>
            </div>
        </center>
    </footer>

    @*End Footer*@
</body>
</html>
